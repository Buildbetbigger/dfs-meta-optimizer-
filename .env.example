# DFS Meta-Optimizer Environment Variables
# IMPORTANT: Do NOT commit this file to GitHub!
# Copy this to .env and add your actual keys

# ==========================================
# REQUIRED: Claude AI API Key
# ==========================================
# Get your key from: https://console.anthropic.com/
# Required for: AI ownership prediction, strategic analysis
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==========================================
# OPTIONAL: Weather API Key
# ==========================================
# Get free key from: https://openweathermap.org/api
# Required for: Weather data integration (v7.0.1 feature)
# System works without this, but weather tab will be disabled
OPENWEATHERMAP_API_KEY=your_openweathermap_key_here

# ==========================================
# OPTIONAL: Other API Keys (Future Use)
# ==========================================
# Add any additional API keys here as needed
# DRAFTKINGS_API_KEY=
# FANDUEL_API_KEY=
# NEWS_API_KEY=

# ==========================================
# CONFIGURATION OPTIONS
# ==========================================
# Set to "true" to enable debug logging
DEBUG_MODE=false

# Set to "true" to use cached data (faster, but may be stale)
USE_CACHED_DATA=true

# Cache timeout in seconds (default: 3600 = 1 hour)
CACHE_TIMEOUT=3600
